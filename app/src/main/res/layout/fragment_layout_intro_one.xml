<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/intro_background"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            style="@style/TextAppearance.AppCompat.Title"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_gravity="top|center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp"
            android:textSize="28sp"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/imageview_one_height"
            android:layout_height="@dimen/imageview_one_height"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_logo_no_background" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="PayBot is meant to facilitate the way we pay using any ussd service on any network. It does the heavy lifting for us!"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom|center"
            android:maxEms="18"
            android:layout_marginLeft="@dimen/spacing_2"
            android:layout_marginRight="@dimen/spacing_2"
            android:layout_marginBottom="@dimen/spacing_2"
            android:textSize="@dimen/text_size_large"/>

    </FrameLayout>

